<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="id.ergun.mymoviedb">

  <uses-permission android:name="android.permission.INTERNET"/>

  <application
      android:name=".App"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme"
      tools:ignore="AllowBackup,GoogleAppIndexingWarning">

    <activity android:name=".ui.view.splash.SplashScreenActivity"
        android:theme="@style/AppTheme.NoActionBar.PrimaryDark">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:name=".ui.view.home.HomeActivity"/>
    <activity android:name=".ui.view.movie.search.SearchActivity"/>

    <activity android:name=".ui.view.movie.detail.MovieDetailActivity"/>

  </application>

</manifest>